<div id="center">
    <% if @errors %>
        <% @errors.each do |error| %>
            <%= error %><br />
        <%end%>
    <% end %>
    <h3 id="log">Change account info</h3><br />
    <form action="/users/<%= current_user.id %>" method="post">
        
        <input type="hidden" name="_method" value="patch">  
        <label for="username">Username:</label>
        <input type="text" id="username" name="user[username]" value="<%=@user.username%>"><br /><br />

        <label for="email">Email:</label>
        <input type="text" id="email" name="user[email]" value="<%=@user.email%>"><br /><br />

        <label for="password">Password:</label>
        <input type="password" id="password" name="user[password]"><br /><br /><br />
        <div id="center2">
        <input type="submit" id="logsign" value="Confirm Changes">
        </div>
    </form>

    <form id="showmenu" method="POST" action="/users/<%= @user.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <a href="/users/<%=current_user.id%>" id="showmenu">Back to Main Menu</a><br /><br /><br />
        <input id="delsubmit" type="submit" onclick="return confirm('Are you sure you want to delete your account and all your assets?');"value="Delete Account">
    </form>
</div>