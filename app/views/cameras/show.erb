<div id="show">
    <%if flash[:camera] %>
    <p><%= flash[:camera] %></p>
    <% end %>
    <h3 id="log"><%= "Camera nickname: '#{@camera.nickname}'" %></h3><br />
    <p><%= "Make: #{@camera.make}" %></p>
    <p><%= "Model: #{@camera.model}" %></p><br /><br />
    <p><%= "#{loaded}" %></p><br /><br />
    <p><%= created_date_time(@camera)[0] %></p>
    <p><%= updated_date_time(@camera) %></p><br /><br />
    
    <form id="showmenu" method="POST" action="/cameras/<%= @camera.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <a href="/cameras/<%= @camera.id %>/edit" id="showmenu">Edit Camera</a>
        <input id="delsubmit" type="submit" onclick="return confirm('Are you sure you want to delete this camera?');" value="Delete Camera">
        <a href="/cameras" id="showmenu">Back to Listing</a>
    </form>
    <a href="/cameras/<%=@camera.id%>/photos" id="showmenu">See all photos taken with this Camera</a>
    <a href="/cameras/<%=@camera.id%>/unload" id="showmenu">Unload Film Roll from this Camera</a>
    
</div><br /><br />
